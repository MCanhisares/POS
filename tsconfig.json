{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "jsx": "react",
    "strict": true,
    "lib": ["ES2021.String"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@screens/*": ["./src/screens/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@theme/*": ["./src/theme/*"],
      "@components/*": ["./src/components/*"],
      "@data/*": ["./src/data/*"],
      "@logic/*": ["./src/logic/*"],
      "@utils/*": ["./src/utils/*"],
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
